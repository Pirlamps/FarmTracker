<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lbYellow"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.wangyuwei.particleview.ParticleView
        android:id="@+id/splash_animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        pv:pv_background_color="@color/lbYellow"
        pv:pv_host_text="Lightbulb Technologies"
        pv:pv_host_text_size="28sp"
        pv:pv_particle_text="LT"
        pv:pv_particle_text_size="30sp"
        pv:pv_text_color="@color/lvBlue"
        pv:pv_text_anim_time="1500"
        pv:pv_spread_anim_time="1000"
        pv:pv_host_text_anim_time="500" />

</LinearLayout>